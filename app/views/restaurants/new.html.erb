<div class="container">
  <div class="row">
    <div class="col">
      <h1>Create a new restaurant</h1>

      <%= form_for @restaurant do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :address %>
        <%= f.text_field :address %>

        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>

        <%= f.label :category, collection: Restaurant::CATEGORY %>
        <%= f.text_field :category %>

        <%= f.submit %>

      <% end %>
    </div>
  </div>
</div>
<hr>
